@model SoccerManager.Models.Player

@{
    ViewData["Title"] = "PlayerInfomation";
    Layout = "~/Views/Shared/_Main_Layout.cshtml";
}


<!--************************************
				Main Start
*************************************-->
<main id="tg-main" class="tg-main tg-haslayout">
	<h2>Player Infomation</h2>


	<div class="container">
		<div class="row">
			<div id="tg-twocolumns" class="tg-twocolumns tg-main-section tg-haslayout">
				
				<h2><a asp-controller="Teams" asp-action="TeamInfo" asp-route-id="@Model.CurrentTeam">Back to Team</a></h2>

				<div class="col-sm-9 col-xs-12 pull-left">
					<div class="tg-player-detail tg-haslayout">
						<div class="tg-player-data tg-haslayout">
							<div class="tg-player-info tg-haslayout">
								<div class="row">
									<div class="col-sm-4 col-xs-12">
										<div class="tg-widget tg-imagewidget">
											<figure>
												@if (ViewBag.PlayerImage != null)
												{
													<img src="~/images/@ViewBag.PlayerImage" alt="@Model.FullName">
												}
												else
												{
													<img src="https://t4.ftcdn.net/jpg/04/73/25/49/360_F_473254957_bxG9yf4ly7OBO5I0O5KABlN930GwaMQz.jpg" alt="">

												}
											</figure>
										</div>
									</div>
									<div class="col-sm-8 col-xs-12">
										<div class="tg-playcontent">
											<a href="#" class="tg-theme-tag">SWEEPER</a>
											<h3><a href="#">@Html.DisplayFor(model => model.FullName)</a></h3>
											<span class="tg-stars"><span></span></span>
										</div>
										<ul>
											<li>Team :</li>
											<li>@ViewBag.Team</li>

											<li>Birth Date :</li>
											<li>@Html.DisplayFor(model => model.Dob)</li>

											<li>age :</li>
											<li>31 Year old</li>

											<li>Birth Place :</li>
											<li>@Html.DisplayFor(model => model.Pob)</li>

											<li>Height :</li>
											<li>@Html.DisplayFor(model => model.Height)</li>

											<li>Field position :</li>
											<li>@Html.DisplayFor(model => model.Position)</li>

											<li>Social Networks :</li>
											<li>
												<ul class="tg-socialicons">
													<li><a href="#"><i class="fa fa-facebook-f"></i></a></li>
													<li><a href="#"><i class="fa fa-twitter"></i></a></li>
													<li><a href="#"><i class="fa fa-linkedin"></i></a></li>
													<li><a href="#"><i class="fa fa-dribbble"></i></a></li>
												</ul>
											</li>
										</ul>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="row">
			<h2>Images from @Model.FullName</h2>
			<div class="col-12 horizontal-scroll">
				@foreach (var item in Model.PlayerImage)
				{
					<div class="col-3">
						<div class="child">
							<img src="@Url.Content("~/images/" + item.ImageUrl)" alt="">
						</div>
					</div>

				}
			</div>
			<style>
				.horizontal-scroll {
					display: flex;
					overflow-x: auto;
					white-space: nowrap;
					padding: 10px;
				}

				.child {
					display: inline-block;
					padding: 10px;
					border: 1px solid #ccc;
					min-width: 200px;
				}

			</style>

		</div>
	</div>
</main>
<!--************************************
		Main End
*************************************-->



