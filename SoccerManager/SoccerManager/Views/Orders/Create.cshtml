@model SoccerManager.Models.Orders

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Orders</h1>
<hr />
<div class="row">
    <div class="">
        <form asp-action="Create">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label class="control-label">Customer</label>
                </div>
                <div class="col-4">
                    <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label class="control-label">Employee</label>
                </div>
                <div class="col-4">
                    <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                </div>
                 </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label class="control-label">Address</label>
                </div>
                <div class="col-4">
                    <select asp-for="AddressId" class="form-control" asp-items="ViewBag.AddressId"></select>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label asp-for="OrderDate" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="OrderDate" class="form-control" />
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label class="control-label">Status</label>
                </div>
                <div class="col-4">
                    <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                </div>
                </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label asp-for="ShippedDate" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="ShippedDate" class="form-control" />
                    <span asp-validation-for="ShippedDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label class="control-label">PaymentMethod</label>
                </div>
                <div class="col-4">
                    <select asp-for="PaymentMethodId" class="form-control" asp-items="ViewBag.PaymentMethodId"></select>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label asp-for="CardName" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="CardName" class="form-control" />
                    <span asp-validation-for="CardName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label asp-for="CardNumber" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="CardNumber" class="form-control" />
                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label asp-for="Expire" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Expire" class="form-control" />
                    <span asp-validation-for="Expire" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label asp-for="SecurityCode" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="SecurityCode" class="form-control" />
                    <span asp-validation-for="SecurityCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label asp-for="PaymentStatus" class="control-label"></label>
                </div>
                <div class="col-4">
                    <select asp-for="PaymentStatus" class="form-control">
                        <option value="1">Done</option>
                        <option value="0">Wait...</option>
                    </select>
                    <span asp-validation-for="PaymentStatus" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label asp-for="PaymentDate" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="PaymentDate" class="form-control" />
                    <span asp-validation-for="PaymentDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
