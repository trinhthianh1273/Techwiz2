                    <label asp-for="OrderDate" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input type="date" asp-for="OrderDate" class="form-control" />
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label asp-for="CustomerId" class="control-label"></label>
                </div>
                <div class="col-4">
                    <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label asp-for="ShippedDate" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input type="date" asp-for="ShippedDate" class="form-control" />
                    <span asp-validation-for="ShippedDate" class="text-danger"></span><span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label asp-for="AddressId" class="control-label"></label>
                </div>
                <div class="col-4">
                    <select asp-for="AddressId" class="form-control" asp-items="ViewBag.AddressId"></select>
                    <span asp-validation-for="AddressId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label asp-for="Status" class="control-label"></label>
                </div>
                <div class="col-4">
                    <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                    <span asp-validation-for="StatusId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <div class="col-2">
                    <label class="control-label">Employee</label>
                </div>
                <div class="col-4">
                    <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
