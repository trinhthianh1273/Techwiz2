@model SoccerManager.Models.Orders

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Orders</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Edit">
