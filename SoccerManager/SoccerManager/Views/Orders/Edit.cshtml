                    <span asp-validation-for="PaymentMethodId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <div class="col-2">
                    <label class="control-label">Payment Status</label>
                </div>
                <div class="col-4">
                    <input asp-for="PaymentStatus" class="form-control" />
                    <span asp-validation-for="PaymentStatus" class="text-danger"></span>
                </div>                
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label class="control-label">Payment Date</label>
                </div>
                <div class="col-4">
                    <input asp-for="PaymentDate" class="form-control" />
                    <span asp-validation-for="PaymentDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label class="control-label">Card Name</label>
                </div>
                <div class="col-4">
                    <input asp-for="CardName" class="form-control" />
                    <span asp-validation-for="CardName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label class="control-label">Card Number</label>
                </div>
                <div class="col-4">
                    <input asp-for="CardNumber" class="form-control" />
                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label class="control-label">Expire</label>
                </div>
                <div class="col-4">
                    <input asp-for="Expire" class="form-control" />
                    <span asp-validation-for="Expire" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-2">
                    <label class="control-label">Security Code</label>
                </div>
                <div class="col-4">
                    <input asp-for="SecurityCode" class="form-control" />
