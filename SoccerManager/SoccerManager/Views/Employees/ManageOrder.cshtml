@model IEnumerable<SoccerManager.Models.Orders>

@{
    ViewData["Title"] = "ManageOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--************************************
        Main Start
*************************************-->
<main id="tg-main" class="tg-main tg-haslayout">
    <h2>Manage Order</h2>

    <p>
        <a asp-action="CreateOrder">Create New</a>
    </p>

    <div class="tg-main-section tg-haslayout">
        <div class="container">
            <div class="page">
                <!-- Navbar -->
                <div class="page-wrapper">
                    <!-- Page header -->
                    <div class="page-header d-print-none">
                        <div class="container-xl">
                            <div class="row g-2 align-items-center">
                                <div class="col">
                                    <div class="tg-section-heading">
                                        <h2 class="page-title">
                                            All orders
                                        </h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Page body -->
                    <div class="page-body">
                        <div class="container-xl">
                            <div class="card">
                                <div class="card-body">
                                    <div id="table-default" class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Customer Name</th>
                                                    <th>Order Date</th>
                                                    <th>Shipped Date</th>
                                                    <th>Payment Date</th>
                                                    <th>Payment Method</th>
                                                    <th>Address</th>
                                                    <th>Payment Status</th>
                                                    <th>Order Status</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody class="table-tbody">
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.Customer.Fullname</td>
                                                        <td>@item.OrderDate</td>
                                                        <td>@item.ShippedDate</td>
                                                        <td>@item.PaymentDate</td>
                                                        <td>@item.PaymentMethod.PaymentMethod1</td>
                                                        <td>@item.Address.Address1</td>

                                                        @if (item.PaymentStatus == null || item.PaymentStatus == 0)
                                                        {
                                                            <td>Not Paid</td>
                                                        }
                                                        else
                                                        {
                                                            <td>Paid</td>

                                                        }
                                                        <td>@item.Status.StatusName</td>
                                                        <td>
                                                            <a asp-action="UpdateOrder" asp-route-id="@item.OrderId">Update</a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<!--************************************
        Main End
*************************************-->
