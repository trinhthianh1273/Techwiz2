@model SoccerManager.Models.Team

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Edit" class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TeamId" />
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShortName" class="control-label"></label>
                    <input asp-for="ShortName" class="form-control" />
                    <span asp-validation-for="ShortName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nickname" class="control-label"></label>
                    <input asp-for="Nickname" class="form-control" />
                    <span asp-validation-for="Nickname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FoundedYear" class="control-label"></label>
                    <input asp-for="FoundedYear" class="form-control" />
                    <span asp-validation-for="FoundedYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FoundedPosition" class="control-label"></label>
                    <input asp-for="FoundedPosition" class="form-control" />
                    <span asp-validation-for="FoundedPosition" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Owner" class="control-label"></label>
                    <input asp-for="Owner" class="form-control" />
                    <span asp-validation-for="Owner" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Manager" class="control-label"></label>
                    <input asp-for="Manager" class="form-control" />
                    <span asp-validation-for="Manager" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Website" class="control-label"></label>
                    <input asp-for="Website" class="form-control" />
                    <span asp-validation-for="Website" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label class="control-label">Logo</label>
                    <img src="~/images/@Html.DisplayFor(model => model.LogoURL)" />
                    <input asp-for="LogoURL" class="col-4 form-control" type="file" name="file" />
                </div>
                
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
