@model SoccerManager.Models.Customer

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Main_Layout.cshtml";
}
<hr />
<div class="container">
<div class="tg-modal-content">
    <div class="tg-formarea">
        <div class="tg-border-heading">
            <h3>Signup</h3>
        </div>
        <form class="tg-loginform" asp-action="Login">
            <fieldset>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Username" class="form-control" placeholder="username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Fullname" class="form-control" placeholder ="fullname"/>
                    <span asp-validation-for="Fullname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Phone" class="form-control" placeholder="phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>
                        <input type="checkbox" value="rememberme" class="checkbox">
                        <em>Remember Me</em>
                    </label>
                </div>
                <div class="form-group">
                    <button class="tg-btn tg-btn-lg" type="submit">Register</button>
                </div>
                <div class="tg-description">
                    <p>Already have an account? <a asp-controller="Customers" asp-action="Login">Login</a></p>
                </div>
            </fieldset>
        </form>

    </div>
</div>
</div>

