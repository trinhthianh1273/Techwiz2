@model SoccerManager.Models.Products

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Products</h4>
    <hr />

    <div class="row col-12">
        <div class="col-6">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.InStock)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.InStock)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OnOrder)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.OnOrder)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Discontinued)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Discontinued)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.CategoryDescription)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Player)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Player.FullName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Team)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Team.FoundedPosition)
                </dd>
            </dl>
        </div>
        <div class="col-6">
            @foreach (var item in Model.ProductImage)
            {
                <div class="row">
                    <div class="col-7">
                        <img src="@Url.Content("~/images/" + item.ImageUrl)" style="width: 200px; margin: 10px 0;" />
                    </div>

                </div>
            }

        </div>
    </div>
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProductId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
