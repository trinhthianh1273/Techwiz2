</head>
<body>
    <div id="tg-wrapper" class="tg-wrapper tg-haslayout">


        <header id="tg-header" class="tg-header tg-haslayout">
            <div class="container">
                <div class="col-md-10 col-md-offset-1 col-sm-12 col-xs-12">
                    <div class="row">
                        <div class="tg-topbar tg-haslayout">
                            <nav id="tg-topaddnav" class="tg-topaddnav">
                                <div class="tg-colhalf pull-right">
                                    <nav class="tg-addnav">
                                        <ul>
                                            @{
                                                var id = Context.Session.GetString("CustomerId");
                                                var name = Context.Session.GetString("CusFullName");
                                                var cartCount = Context.Session.GetString("CartCount");

                                                if (id == null)
                                                {
                                                    <li>
                                                        <a asp-area="" asp-controller="Customers" asp-action="Login">Login</a>
                                                    </li>
                                                    <li>
                                                        <a asp-area="" asp-controller="Customers" asp-action="Register">Register</a>
                                                    </li>
                                                    <li>
                                                        <div class="tg-cart">
                                                            <a asp-area="" asp-controller="Customers" asp-action="Login">
                                                                <i class="fa fa-shopping-cart"></i>
                                                            </a>
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <a asp-area="" asp-controller="Employees" asp-action="Login">Manager</a>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li>
                                                        <a asp-area="" asp-controller="Customers" asp-action="Profile" asp-route-id="@id">@name</a>
                                                    </li>
                                                    <li class="cart-icon">
                                                        <a asp-area="" asp-controller="Customers" asp-action="Cart">
                                                            <i class="fa fa-shopping-cart"></i>
                                                            <span class="cart-count">@cartCount</span>
                                                        </a>
                                                    </li>
                                                }
                                            }
                                        </ul>
                                    </nav>
                                </div>
                                <div class="tg-colhalf">
                                    <ul class="tg-socialicons">
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-facebook"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-twitter"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-linkedin"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-google-plus"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-dribbble"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>

                            </nav>
                        </div>
                        <nav id="tg-nav" class="tg-nav brand-center">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                                        data-target="#tg-navigationm-mobile">
                                    <i class="fa fa-bars"></i>
                                </button>
                                <strong class="tg-logo">
                                    <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt="image description"></a>
                                </strong>
                            </div>
                            <div id="tg-navigation" class="tg-navigation">
                                <div class="tg-colhalf">
                                    <ul>
                                        <li>
                                            <a asp-area="" asp-controller="Matches" asp-action="Matches">Matches</a>
                                        </li>
                                        <li>
                                            <a asp-area="" asp-controller="Teams" asp-action="ListTeam">Team</a>
                                        </li>
                                        <li>
                                            <a asp-area="" asp-controller="Teams" asp-action="ListTeam">Player</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="tg-colhalf">
                                    <ul>
                                        <li>
                                            <a asp-area="" asp-controller="News" asp-action="Articles">News</a>
                                        </li>
                                        <li>
                                            <a asp-area="" asp-controller="Products" asp-action="Shopping">Shopping</a>
                                        </li>
                                        <li>
                                            <a asp-area="" asp-controller="Home" asp-action="Contact">Contacts</a>
                                        </li>
                                        <li>
                                            <a href="#"><i class=" fa fa-navicon"></i></a>
                                            <ul>
                                                <li><a asp-area="" asp-controller="Home" asp-action="AboutUs">about us</a></li>
                                                <li><a asp-area="" asp-controller="Home" asp-action="Logout">logout</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </header>


        @RenderBody()
        @*<main role="main">
        @RenderBody()
        </main>*@


