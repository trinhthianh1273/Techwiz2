@model IEnumerable<SoccerManager.Models.PlayerImage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlayerImageID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlayerImageID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlayerImageID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
